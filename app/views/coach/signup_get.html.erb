<%=render 'signed_out_nav'%>
<div id="signin">
<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center">Trainer Sign Up</h1>

    <%= form_tag '/coach/signup',method: :post do%>
      <div class="form-group">
        <%= text_field_tag "name",nil, autofocus: false, :class => 'form-control', placeholder: "Name" %>
      </div>

      <div class="form-group">
        <%= email_field_tag "email",nil, autofocus: false, :class=> 'form-control', placeholder: "Email Address" %>
      </div>

      <div class="form-group">
        <%= password_field_tag "password",nil, autocomplete: "off", :class=> 'form-control', placeholder: 'Password'%>
      </div>

      <div class="form-group">
        <%= submit_tag "Sign up", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
</div>